#Switch
case hoy in
          hoy)
                FECHA=$(date +%Y-%m-%d)
                ;;
        manana)
                FECHA=$(date +%Y-%m-%d -d "+ 1 day")
                ;;
        pasadomanana)
                FECHA=$(date +%Y-%m-%d -d "+ 2 day")
                ;;
        pasadomananamanana)
                FECHA=$(date +%Y-%m-%d -d "+ 3 day")
                ;;
        *)
esac
echo $FECHA

